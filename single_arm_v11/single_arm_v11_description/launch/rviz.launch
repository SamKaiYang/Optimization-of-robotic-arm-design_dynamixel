<launch>
  <param name="robot_description"
    command="xacro '$(find single_arm_v11)/single_arm_v11_description/urdf/single_arm_v11.xacro'"/>

  <!-- send fake joint values -->
  <node 
      name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="TRUE"/>
  </node>

  <!-- Combine joint values -->
  <node 
      name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Show in Rviz   -->
  <node 
      name="rviz" pkg="rviz" type="rviz" 
      args="-d (find single_arm_v11)/single_arm_v11_description/launch/single_arm.rviz"/>

</launch>
